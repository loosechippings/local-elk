{
  "$schema": "https://vega.github.io/schema/vega/v3.2.json",
  "data": {
    "name": "foo",
    "url": {
      "index": "kibana_sample_data_ecommerce",
      "body": {
          "aggs": {
            "date": {
              "date_histogram": {
                "field": "order_date",
                "interval": "day"
              },
              "aggs": {
                "gender": {
                  "terms": {"field": "customer_gender"},
                  "aggs": {
                    "cont": {
                      "terms": {"field": "geoip.continent_name"},
                      "aggs": {
                        "total": {
                          "sum": {"field": "taxful_total_price"}
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
    "format": {"property": "aggregations.date.buckets"},
    "transform": [
      {"type": "flatten", "fields": ["gender.buckets"], "as": ["foo"]},
      {"type": "flatten", "fields": ["foo.cont.buckets"], "as": ["bar"]},
      {"type": "project", "fields": ["bar.key", "foo.key", "bar.total.value", "key"], "as": ["continent", "gender", "value", "orderdate"]}
    ],
    "size": 0
  },
  "signals": [
    {"name": "pad", "value": "5"}
    {"name": "cellWidth", "update": "width / 2 - (2 * pad)"},
    {"name": "cellHeight", "update": "height / 5 - (2 * pad)"}
  ],
  "scales": [
    {"name": "genderScale", "type": "band", "domain": {"data": "foo", "field": "gender"}, "range": [0, {"signal": "width"}]},
    {"name": "continentScale", "type": "band", "domain": {"data": "foo", "field": "continent"}, "range": [{"signal": "height"}, 0]},
    {"name": "xscale", "type": "time", "domain": {"data": "foo", "field": "orderdate"}, "range": [0, {"signal": "cellWidth"}]},
    {"name": "yscale", "type": "linear", "domain": {"data": "foo", "field": "value"}, "range": [{"signal": "cellHeight"}, 0]}
  ],
  "axes": [
  ],
  "marks": [
    {
      "type": "group",
      "from": {
          "facet": {
          "name": "g",
          "data": "foo",
          "groupby": ["gender", "continent"]
        }
      },
      "encode": {
        "enter": {
          "x": {"signal": "scale('genderScale', datum.gender) + pad"},
          "y": {"signal": "scale('continentScale', datum.continent) - pad"},
          "width": {"signal": "cellWidth"},
          "height": {"signal": "cellHeight"},
          "fill": {"value": "beige"}
        }
      },
      "marks": [
        {
          "type": "area",
          "from": {"data": "g"},
          "encode": {
            "enter": {
              "x": {"scale": "xscale", "field": "orderdate"},
              "y": {"scale": "yscale", "field": "value"},
              "y2": {"signal": "cellHeight"}
            }
          }
        }
      ]
    }
  ]
}
